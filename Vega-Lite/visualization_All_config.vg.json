{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 800,
  "height": 500,
  "title": {
    "text": "Carbon emissions of countries from 2010-2019",
    "frame": "group"
  },
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/YuangFu0527/FIT3179/main/3179%20Map/ne_110m_admin_0_countries.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/YuangFu0527/FIT3179/main/Data/Carbon%20dioxide%20emission.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "geojson",
          "fields": ["Longitude", "Latitude"],
          "signal": "layer_1_geojson_0"
        },
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["Longitude", "Latitude"],
          "as": ["layer_1_x", "layer_1_y"]
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"Sum of each countries\"]) && isFinite(+datum[\"Sum of each countries\"]) && isValid(datum[\"Emission level\"]) && isFinite(+datum[\"Emission level\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {"signal": "[data('source_0'), layer_1_geojson_0]"},
      "type": "equalEarth"
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"value": "lightblue"},
          "stroke": {"value": "gray"},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_1_marks",
      "type": "symbol",
      "style": ["circle"],
      "from": {"data": "source_1"},
      "encode": {
        "update": {
          "opacity": {"value": 0.7},
          "tooltip": {"signal": "datum"},
          "fill": {"scale": "color", "field": "Sum of each countries"},
          "ariaRoleDescription": {"value": "circle"},
          "description": {
            "signal": "\"Longitude: \" + (format(datum[\"Longitude\"], \"\")) + \"; Latitude: \" + (format(datum[\"Latitude\"], \"\")) + \"; Emission in kt: \" + (format(datum[\"Sum of each countries\"], \"\")) + \"; Emission level: \" + (format(datum[\"Emission level\"], \"\"))"
          },
          "x": {"field": "layer_1_x"},
          "y": {"field": "layer_1_y"},
          "size": {"scale": "size", "field": "Emission level"},
          "shape": {"value": "circle"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "linear",
      "domain": {"data": "source_1", "field": "Sum of each countries"},
      "range": {"scheme": "reds"},
      "interpolate": "hcl",
      "zero": false
    },
    {
      "name": "size",
      "type": "linear",
      "domain": [5, 9],
      "range": [9, 361],
      "zero": false
    }
  ],
  "legends": [
    {
      "title": "Emission in kt",
      "fill": "color",
      "gradientLength": {"signal": "clamp(height, 64, 200)"},
      "encode": {"gradient": {"update": {"opacity": {"value": 0.7}}}}
    },
    {
      "title": "Emission level",
      "size": "size",
      "symbolType": "circle",
      "encode": {
        "symbols": {
          "update": {
            "fill": {"value": "black"},
            "fillOpacity": {"value": 0.7},
            "opacity": {"value": 0.7},
            "stroke": {"value": "transparent"}
          }
        }
      }
    }
  ],
  "config": {}
}